
<div class="container">
  
  <div class="row">
    <div class="col-md-3">
      <%= render "info", user: @user %>
      <%= render "books/list" %>
    </div>  
    
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
            <th class="header1"></th>   </th>
            <th class="header2">Title</th>
            <th class="header3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user_id) do %><%= image_tag @user.get_profile_image(100, 100) %><% end %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>