
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @user do |f| %>

      <h4>Name</h4>
      <%= f.text_field :name %>

      <h4>Image</h4>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

      <h4>Introduction</h4>
      <%= f.text_area :introduction %>

      <div><%= f.submit "Update User", class: "btn btn-secondary" %></div>
      <% end %>
    </div>
  </div>
</div>