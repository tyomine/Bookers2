<div class="container">

    <div id="error_explanation">
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>  
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
            <th>   </th>
          </tr>
        </tbody>
      </table>  
      <% if @user.id == current_user.id %>
      <%= link_to "編集",edit_user_path(@user.id) %>
      <% end %>
        

      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
  
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
    
    <div class="col-md-8">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
            <th class="header1"></th></th>
            <th class="header2">Title</th>
            <th class="header3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
