
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
       </ul>
      <% end %>


      <%= form_with model: @book do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <div><%= f.submit "Update Book", class: "btn btn-success" %></div>
      <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
