
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
            <th>   </th>
          </tr>
        </tbody>
      </table>  
      
      <%= link_to "編集", edit_user_path(@user.id) %>
        

      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
  
        <p><%= f.submit "Create Book" %></p>
      <% end %>
    </div>
    
    <div class="col-md-8">
        <h2>Book detail</h2>
        <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %><br><%= link_to @user.name, user_path(@user) %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


